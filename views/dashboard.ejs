<% include layout_header %>
<div class="col-md-3">
	<div class="panel panel-default">
		<div class="panel-heading">프로젝트 <a class="btn btn-success btn-xs pull-right" href="/project/new"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 신규 프로젝트</a></div>
		<div class="list-group">
			<% if (projects.length) { %>
			<% for (var i = 0; i < projects.length; i++) { %>
			<a href="/p/<%= projects[i].url %>" class="list-group-item"><%= projects[i].name %></a>
			<% } %>
			<% } else { %>
			<a href="#" class="list-group-item disabled">진행중인 프로젝트가 존재하지 않습니다.</a>
			<% };%>
		</div>
	</div>
</div>
<div class="col-md-9">
	<div class="panel panel-default">
		<div class="panel-heading">알림</div>
		<ul class="list-group">
			<% if (notifications.length) { %>
			<% for (var i = 0; i < notifications.length; i++) { %>
				<% if (notifications[i].type == 101) { %>
					<li href="#" class="list-group-item"><a href="/u/<%= notifications[i].username %>"><%= notifications[i].name %></a>님이 <a href="/p/<%= notifications[i].url %>"><%= notifications[i].title %></a> 프로젝트에 가입을 신청하셨습니다. 승인하시겠습니까?</li>
				<% }; %>	
			<% } %>
			<% } else { %>
			<li href="#" class="list-group-item disabled">새로운 알림이 없습니다.</li>
			<% };%>
		</ul>
	</div>
</div>
<% include layout_footer %>